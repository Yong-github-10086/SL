<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs') %>
<body>

    <%- include('partials/nav') %>

    <div class="container mt-4">
        <h2 class="text-center">Edit Student Info</h2>

        <form id="studentSelectForm" class="mb-4">
            <div class="mb-3">
                <label for="searchName" class="form-label">Select Student by Name</label>
                <input type="text" class="form-control" id="searchName" name="searchName" autocomplete="off" required>
                <ul id="suggestions" class="list-group mt-2" style="display:none;"></ul>
            </div>
            <button type="button" id="confirmSelect" class="btn btn-primary">Confirm Selection</button>
        </form>

        <form id="editForm" action="/edit" method="POST" style="max-width: 600px; display: none;">
            <input type="hidden" id="studentId" name="studentId" value="">

            <!-- Student Info -->
            <h4>Student Info</h4>
            <div class="mb-3">
                <label for="firstName" class="form-label">First Name</label>
                <input type="text" class="form-control" id="firstName" name="firstName" required>
            </div>
            <div class="mb-3">
                <label for="lastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="lastName" name="lastName" required>
            </div>
            
            <div class="mb-3">
                <label for="birthday" class="form-label">Birthday</label>
                <input type="date" class="form-control" id="birthday" name="birthday" required>
            </div>
            <div class="mb-3">
                <label for="sex" class="form-label">Sex</label>
                <select class="form-select" id="sex" name="sex" required>
                    <option value="">Select Sex</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="phone" name="phone" required>
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" name="address" required>
            </div>
            <div class="mb-3">
                <label for="city" class="form-label">City</label>
                <input type="text" class="form-control" id="city" name="city" required>
            </div>
            <div class="mb-3">
                <label for="postalCode" class="form-label">Postal Code</label>
                <input type="text" class="form-control" id="postalCode" name="postalCode" required>
            </div>
            <div class="mb-3">
                <label for="school" class="form-label">School</label>
                <input type="text" class="form-control" id="school" name="school" required>
            </div>
            <div class="mb-3">
                <label for="programInterest" class="form-label">Program Interest</label>
                <input type="text" class="form-control" id="programInterest" name="programInterest" required>
            </div>

            <!-- Emergency Contact -->
            <h4>Emergency Contact</h4>
            <div class="mb-3">
                <label for="emergencyFirstName" class="form-label">First Name</label>
                <input type="text" class="form-control" id="emergencyFirstName" name="emergencyFirstName" required>
            </div>
            <div class="mb-3">
                <label for="emergencyLastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="emergencyLastName" name="emergencyLastName" required>
            </div>
            <div class="mb-3">
                <label for="emergencyPhone" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="emergencyPhone" name="emergencyPhone" required>
            </div>
            <div class="mb-3">
                <label for="emergencyAddress" class="form-label">Address</label>
                <input type="text" class="form-control" id="emergencyAddress" name="emergencyAddress" required>
            </div>
            <div class="mb-3">
                <label for="emergencyCity" class="form-label">City</label>
                <input type="text" class="form-control" id="emergencyCity" name="emergencyCity" required>
            </div>
            <div class="mb-3">
                <label for="emergencyPostalCode" class="form-label">Postal Code</label>
                <input type="text" class="form-control" id="emergencyPostalCode" name="emergencyPostalCode" required>
            </div>
            <div class="mb-3">
                <label for="relationship" class="form-label">Relationship</label>
                <input type="text" class="form-control" id="relationship" name="relationship" required>
            </div>

            <!-- Parent Information -->
            <h4>Parent Information</h4>
            <div class="mb-3">
                <label for="parent1FirstName" class="form-label">Parent1 First Name</label>
                <input type="text" class="form-control" id="parent1FirstName" name="parent1FirstName" required>
            </div>
            <div class="mb-3">
                <label for="parent1LastName" class="form-label">Parent1 Last Name</label>
                <input type="text" class="form-control" id="parent1LastName" name="parent1LastName" required>
            </div>
            <div class="mb-3">
                <label for="parent1Phone" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="parent1Phone" name="parent1Phone" required>
            </div>
            <div class="mb-3">
                <label for="parent1Address" class="form-label">Address</label>
                <input type="text" class="form-control" id="parent1Address" name="parent1Address" required>
            </div>
            <div class="mb-3">
                <label for="parent1City" class="form-label">City</label>
                <input type="text" class="form-control" id="parent1City" name="parent1City" required>
            </div>
            <div class="mb-3">
                <label for="parent1Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="parent1Email" name="parent1Email" required>
            </div>
            <div class="mb-3">
                <label for="parent1Employer" class="form-label">Employer</label>
                <input type="text" class="form-control" id="parent1Employer" name="parent1Employer" required>
            </div>
            <div class="mb-3">
                <label for="parent2FirstName" class="form-label">Parent2 First Name</label>
                <input type="text" class="form-control" id="parent2FirstName" name="parent2FirstName" required>
            </div>
            <div class="mb-3">
                <label for="parent2LastName" class="form-label">Parent2 Last Name</label>
                <input type="text" class="form-control" id="parent2LastName" name="parent2LastName" required>
            </div>
            <div class="mb-3">
                <label for="parent2Phone" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="parent2Phone" name="parent2Phone" required>
            </div>
            <div class="mb-3">
                <label for="parent2Address" class="form-label">Address</label>
                <input type="text" class="form-control" id="parent2Address" name="parent2Address" required>
            </div>
            <div class="mb-3">
                <label for="parent2City" class="form-label">City</label>
                <input type="text" class="form-control" id="parent2City" name="parent2City" required>
            </div>
            <div class="mb-3">
                <label for="parent2Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="parent2Email" name="parent2Email" required>
            </div>
            <div class="mb-3">
                <label for="parent2Employer" class="form-label">Employer</label>
                <input type="text" class="form-control" id="parent2Employer" name="parent2Employer" required>
            </div>


            <button type="submit" class="btn btn-primary">Update Info</button>
        </form>

        <% if (message) { %>
            <div class="alert alert-success mt-3"><%= message %></div>
        <% } else if (error) { %>
            <div class="alert alert-danger mt-3"><%= error %></div>
        <% } %>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#searchName').on('input', function() {
                const searchTerm = $(this).val();
                if (searchTerm.length > 1) {
                    $.ajax({
                        url: '/get-students',
                        method: 'GET',
                        success: function(data) {
                            const students = data[0];
                            console.log(students);
                            const filteredStudents = students.filter(student =>
                                `${student.firstName} ${student.lastName}`.toLowerCase().includes(searchTerm.toLowerCase())
                            );

                            const suggestions = filteredStudents.map(student => 
                                `<li class="list-group-item" data-id="${student.id}">${student.firstName} ${student.lastName} - ${student.phone}</li>`
                            );
                            $('#suggestions').html(suggestions.join('')).show();
                        }
                    });
                } else {
                    $('#suggestions').hide();
                }
            });

            $(document).on('click', '.list-group-item', function() {
                const studentId = $(this).data('id');
                const studentName = $(this).text();
                $('#searchName').val(studentName);
                $('#studentId').val(studentId);
                $('#suggestions').hide();
            });

            $('#confirmSelect').on('click', function() {
                const studentId = $('#studentId').val();
                if (studentId) {
                    $.ajax({
                        url: '/get-student-info',
                        method: 'GET',
                        data: { id: studentId },
                        success: function(student) {
                            if (student) {
                                // Populate the edit form with student info
                                $('#firstName').val(student.firstName);
                                $('#lastName').val(student.lastName);
                                const isoDate = student.birthday; // e.g., "2024-10-01T07:00:00.000Z"
                                const date = new Date(isoDate); // Convert ISO string to Date object

                                // Format the date to YYYY-MM-DD
                                const formattedDate = date.toISOString().split('T')[0]; // "2024-10-01"

                                $('#birthday').val(formattedDate);
                                console.log('Birthday from database:', formattedDate); // Check the value
                                $('#sex').val(student.sex);
                                $('#phone').val(student.phone);
                                $('#address').val(student.address);
                                $('#city').val(student.city);
                                $('#postalCode').val(student.postalCode);
                                $('#school').val(student.school);
                                $('#programInterest').val(student.programInterest);
                                // Populate emergency contact
                                $('#emergencyFirstName').val(student.emergencyFirstName);
                                $('#emergencyLastName').val(student.emergencyLastName);
                                $('#emergencyPhone').val(student.emergencyPhone);
                                $('#emergencyAddress').val(student.emergencyAddress);
                                $('#emergencyCity').val(student.emergencyCity);
                                $('#emergencyPostalCode').val(student.emergencyPostalCode);
                                $('#relationship').val(student.relationship);
                                // Populate parent information
                                $('#parent1FirstName').val(student.parent1FirstName);
                                $('#parent1LastName').val(student.parent1LastName);
                                $('#parent1Phone').val(student.parent1Phone);
                                $('#parent1Address').val(student.parent1Address);
                                $('#parent1City').val(student.parent1City);
                                $('#parent1Email').val(student.parent1Email);
                                $('#parent1Employer').val(student.parent1Employer);
                                $('#parent2FirstName').val(student.parent2FirstName);
                                $('#parent2LastName').val(student.parent2LastName);
                                $('#parent2Phone').val(student.parent2Phone);
                                $('#parent2Address').val(student.parent2Address);
                                $('#parent2City').val(student.parent2City);
                                $('#parent2Email').val(student.parent2Email);
                                $('#parent2Employer').val(student.parent2Employer);

                                $('#editForm').show();
                            } else {
                                alert('Student information not found.');
                            }
                        }
                    });
                } else {
                    alert('Please select a student.');
                }
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
