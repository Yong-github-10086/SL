<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs') %>
<body>

    <%- include('partials/nav') %>
    <title >Add Student Info</title>
    <div class="container mt-4">
        <h2 class="text-center">Add Student Information</h2>
        
        <% if (message) { %>
            <div class="alert alert-success mt-3"><%= message %></div>
        <% } else if (error) { %>
            <div class="alert alert-danger mt-3"><%= error %></div>
        <% } %>

        <form id="studentForm" action="/add" method="POST" class="mx-auto" style="max-width: 600px; ">
            <h4 class="mt-4">Student Info</h4>
            <div class="row mb-3">
                <div class="col">
                    <label for="firstName" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="firstName" name="firstName" required>
                </div>
                <div class="col">
                    <label for="lastName" class="form-label">Last Name</label>
                    <input type="text" class="form-control" id="lastName" name="lastName" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="birthday" class="form-label">Birthday</label>
                    <input type="date" class="form-control" id="birthday" name="birthday" required>
                </div>
                <div class="col">
                    <label for="sex" class="form-label">Sex</label>
                    <select class="form-control" id="sex" name="sex" required>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="col">
                    <label for="phone" class="form-label">Phone Number</label>
                    <input type="tel" class="form-control" id="phone" name="phone" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="address" class="form-label">Address</label>
                    <input type="text" class="form-control" id="address" name="address" required>
                </div>
                <div class="col">
                    <label for="distance" class="form-label">Distance</label>
                    <input type="text" class="form-control" id="distance" name="distance" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="city" class="form-label">City</label>
                    <input type="text" class="form-control" id="city" name="city" required>
                </div>
                <div class="col">
                    <label for="postalCode" class="form-label">Postal Code</label>
                    <input type="text" class="form-control" id="postalCode" name="postalCode" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="school" class="form-label">School</label>
                    <input type="text" class="form-control" id="school" name="school" required>
                </div>
                <div class="col">
                    <label for="programInterest" class="form-label">Program Interest</label>
                    <input type="text" class="form-control" id="programInterest" name="programInterest" required>
                </div>
            </div>

            <h4 class="mt-4">Emergency Contact</h4>
            <div class="row mb-3">
                <div class="col">
                    <label for="emergencyFirstName" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="emergencyFirstName" name="emergencyFirstName" required>
                </div>
                <div class="col">
                    <label for="emergencyLastName" class="form-label">Last Name</label>
                    <input type="text" class="form-control" id="emergencyLastName" name="emergencyLastName" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="emergencyPhone" class="form-label">Phone Number</label>
                    <input type="tel" class="form-control" id="emergencyPhone" name="emergencyPhone" required>
                </div>
                <div class="col">
                    <label for="relationship" class="form-label">Relationship</label>
                    <input type="text" class="form-control" id="relationship" name="relationship" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="emergencyAddress" class="form-label">Address</label>
                <input type="text" class="form-control" id="emergencyAddress" name="emergencyAddress" required>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="emergencyCity" class="form-label">City</label>
                    <input type="text" class="form-control" id="emergencyCity" name="emergencyCity" required>
                </div>
                <div class="col">
                    <label for="emergencyPostalCode" class="form-label">Postal Code</label>
                    <input type="text" class="form-control" id="emergencyPostalCode" name="emergencyPostalCode" required>
                </div>
            </div>

            <h4 class="mt-4">Parent Information</h4>
            <div class="row mb-3">
                <div class="col">
                    <label for="parent1FirstName" class="form-label">Parent 1 First Name</label>
                    <input type="text" class="form-control" id="parent1FirstName" name="parent1FirstName" required>
                </div>
                <div class="col">
                    <label for="parent1LastName" class="form-label">Parent 1 Last Name</label>
                    <input type="text" class="form-control" id="parent1LastName" name="parent1LastName" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="parent1Phone" class="form-label">Parent 1 Phone Number</label>
                    <input type="tel" class="form-control" id="parent1Phone" name="parent1Phone" required>
                </div>
                <div class="col">
                    <label for="parent1Email" class="form-label">Parent 1 Email</label>
                    <input type="email" class="form-control" id="parent1Email" name="parent1Email" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="parent1Address" class="form-label">Parent 1 Address</label>
                <input type="text" class="form-control" id="parent1Address" name="parent1Address" required>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="parent1City" class="form-label">Parent 1 City</label>
                    <input type="text" class="form-control" id="parent1City" name="parent1City" required>
                </div>
                <div class="col">
                    <label for="parent1Employer" class="form-label">Parent 1 Employer</label>
                    <input type="text" class="form-control" id="parent1Employer" name="parent1Employer" required>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <label for="parent2FirstName" class="form-label">Parent 2 First Name</label>
                    <input type="text" class="form-control" id="parent2FirstName" name="parent2FirstName" required>
                </div>
                <div class="col">
                    <label for="parent2LastName" class="form-label">Parent 2 Last Name</label>
                    <input type="text" class="form-control" id="parent2LastName" name="parent2LastName" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="parent2Phone" class="form-label">Parent 2 Phone Number</label>
                    <input type="tel" class="form-control" id="parent2Phone" name="parent2Phone" required>
                </div>
                <div class="col">
                    <label for="parent2Email" class="form-label">Parent 2 Email</label>
                    <input type="email" class="form-control" id="parent2Email" name="parent2Email" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="parent2Address" class="form-label">Parent 2 Address</label>
                <input type="text" class="form-control" id="parent2Address" name="parent2Address" required>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="parent2City" class="form-label">Parent 2 City</label>
                    <input type="text" class="form-control" id="parent2City" name="parent2City" required>
                </div>
                <div class="col">
                    <label for="parent2Employer" class="form-label">Parent 2 Employer</label>
                    <input type="text" class="form-control" id="parent2Employer" name="parent2Employer" required>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
